<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_expense_form_view_ap" model="ir.ui.view">
            <field name="name">hr.expense.ap</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form" />
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                   
                <field name="related_project_id" invisible="0" force_save="1" />
                <field name="task_id" force_save="1"
                    domain="[('project_id', '=', related_project_id)]"
                    options="{'no_quick_create': True, 'no_create_edit' : True,'no_open': True}"
                    attrs="{'required': [('related_project_id', '!=', False)]}" />
                    <field name="category_id"/>
                </field>
                <field name="analytic_account_id" position="replace">
                     <field name='analytic_account_id' string='Proposal/Project'
                    context="{'nilesh': 'nilesh' }"
                    domain="['|',('project_manager','=',uid),('project_id.proposal_team.user_id','=',uid)]" />
                </field>
                
            </field>
        </record> 

        <record id="view_ap_account_analytic_account_inherited"
                model="ir.ui.view">
            <field name="name">view.ap.account.analytic.account.inherited</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id"
                   ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <field name='partner_id' position="after">
                    <field name="project_manager"/>
                    <field name="project_id"/>
                </field>
                
            </field>
        </record>
    </data>
</odoo>