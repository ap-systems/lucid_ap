		<record id="view_form_outstanding_reason" model="ir.ui.view">
            <field name="name">view.form.outstanding.reason.ap</field>
            <field name="model">outstanding.reason</field>
            <field name="arch" type="xml">
                <form string="Reason">
                   <sheet>
                       <group>
                            <field name="name"/>
                       </group>
                    </sheet>
                </form>
            </field>
        </record>


		<record id="view_list_outstanding_reason" model="ir.ui.view">
            <field name="name">view.list.outstanding.reason.ap</field>
            <field name="model">outstanding.reason</field>
            <field name="arch" type="xml">
                <tree string="Reason"  >
                    <field name="name"/>
                </tree>
            </field>
        </record>
        

	<record id="action_outstanding_reason" model="ir.actions.act_window">
        <field name="name">Reason</field>
        <field name="res_model">outstanding.reason</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_list_outstanding_reason"/>
    </record> 
 
    <menuitem id="menu_outstanding_reason" 
              name="Reason"
              parent="account.menu_finance_configuration" sequence="1"
              action="action_outstanding_reason"/>
	</data>
